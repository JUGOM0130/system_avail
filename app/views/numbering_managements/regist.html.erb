<h1 class="mt-3 mb-5"><%= @title %></h1>

<%= form_with(model: @saiban, url: "/saiban/create", local: :true) do |f| %>
<div class="row mb-1">
    <div class="col">
        <%= f.label :koumoku_id, "採番ID",for:"koumoku_id", class:"form-label" %>
        <%= f.text_field :koumoku_id ,class:"form-control"%>
    </div>
    <div class="col">
        <%= f.label :index, "Index",for:"index", class:"form-label" %>
        <%= f.number_field :index ,class:"form-control"%>
    </div>
</div>
<div class="row mb-1">
    <div class="col">
        <%= f.submit "登録", class:"btn btn-info"%>
    </div>
</div>


<% end %>
