<h1 class="mt-3 mb-5"><%= @title %></h1>

<%= form_with model: @model, local: true do |f| %>
<div class="row">
    <div class="col">
        <div class="mb-3">
            <%= f.label :tori_cd, "取引先コード",for:"tori_cd", class:"form-label" %>
            <%= f.text_field :tori_cd, class:"form-control" %>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="mb-3">
            <%= f.label :ndate, "日付",for:"ndate", class:"form-label" %>
            <%= f.date_field :ndate, class:"form-control"%>
        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <%= f.label :nno, "納品書NO",for:"nno", class:"form-label" %>
            <%= f.text_field :nno, class:"form-control"%>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="mb-3">
            <%= f.label :nhinname, "品名",for:"nhinname", class:"form-label" %>
            <%= f.text_field :nhinname, class:"form-control"%>
        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <%= f.label :suryo, "数量",for:"suryo", class:"form-label" %>
            <%= f.number_field :suryo, class:"form-control"%>
        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <%= f.label :tanka, "単価",for:"tanka", class:"form-label" %>
            <%= f.number_field :tanka, class:"form-control"%>
        </div>
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="mb-3">
            <%= f.label :kingaku, "金額",for:"kingaku", class:"form-label" %>
            <%= f.number_field :kingaku, class:"form-control"%>
        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <%= f.label :taxingaku, "税込金額",for:"taxingaku", class:"form-label" %>
            <%= f.number_field :taxingaku, class:"form-control"%>
        </div>
    </div>
    <div class="col">
        <div class="mb-3">
            <%= f.label :tekiyo, "適要",for:"tekiyo", class:"form-label" %>
            <%= f.text_field :tekiyo, class:"form-control"%>
        </div>
    </div>
</div>

<%= f.submit "登録", class:"btn btn-info"%>

<% end %>
