<div class="container" id="app">
    <h1 class="mt-3 mb-5"><%= @title %></h1>

    <%= form_with url:"/usermasta/create",method: :post do |f| %>
    <div class="row">
        <div class="col">
            <div class="mb-3">
                <% #for: は無くても自動生成してくれるみたい %>
                <%= f.label :user_cd, "ユーザコード",for:"user_cd", class:"form-label" %>
                <%= f.text_field :user_cd, class:"form-control", value:@user_cd, readonly:true%>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="mb-3">
                <%= f.label :first_name, "氏", class:"form-label" %>
                <%= f.text_field :first_name, placeholder:"苗字", class:"form-control"%>
            </div>
        </div>
        <div class="col">
            <div class="mb-3">
                <%= f.label :last_name, "名", class:"form-label" %>
                <%= f.text_field :last_name, placeholder:"名前", class:"form-control"%>
            </div>
        </div>
    </div>

    <%= f.submit "登録", class:"btn btn-info"%>

    <% end %>
</div>
